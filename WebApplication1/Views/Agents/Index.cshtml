@model IEnumerable<gTravel.Models.Agent>

@{
    ViewBag.Title = "Index";
}

<h3>
    <a href="/Agents/Index">Агенты</a>
</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
