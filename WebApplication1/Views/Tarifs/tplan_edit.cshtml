@model IEnumerable<gTravel.Models.Tarif>

@{
    ViewBag.Title = ((gTravel.Models.TarifPlan)ViewBag.TarifPlan).Name;
    
    Guid tpid = ((gTravel.Models.TarifPlan)ViewBag.TarifPlan).TarifPlanId;
}

<h3>@ViewBag.Title</h3>

<p>
    @Html.ActionLink("Create New", "tplan_addrow", new { TarifPlanId = tpid })
</p>
<table class="table">
    <tr>
        <th>
            Серия
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsSumFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsSumTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FranshSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FranshPerc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PremSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsFee)
        </th>
        <th>
           Риск
        </th>
        <th>
            Территория
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
