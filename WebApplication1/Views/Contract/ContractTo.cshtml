                url: '@Url.Action("_addAgentRow", "Contract")',
                type: 'POST',
                data: { contractid: '@Model.ContractId' },
                beforeSend: function () {
                    $("#agent_wait").show();
                },
                success: function (data) {

                    $(data).insertAfter("#agent_wait");

                    $(".agent-dell").on("click", function (e) {

                        var id = $(this).attr("data-id");
