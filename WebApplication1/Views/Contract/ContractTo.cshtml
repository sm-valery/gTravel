                data: { factorid: factor_id, contractid: '@Model.ContractId', xv: '@viewonly' },
                beforeSend: function () {
                    $("#bonus_wait").show();
                },
                success: function (data) {

                    discounts.children(".risk_bonus_content").html(data);
