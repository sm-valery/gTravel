@model IEnumerable<gTravel.Models.Factor>
@if (Model.Any())
{
    var risk = Model.FirstOrDefault();
   
    <!-- Single button -->
    <div id="risk_bonus_@risk.RiskId">
        <div class="btn-group frm-discounts">
            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                Добавить <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                @foreach (var item in Model)
                {
                    if (item.FactorType == "separator ")
                    {
                        <li class="divider"></li>
                    }
                    else
                    {
                        <li><a id="@item.IdFactor" href="#">@item.Name</a></li>
                    }


                    @*<li><a href="#">Программа A</a></li>
                        <li><a href="#">Программа B</a></li>
                        <li><a href="#">Программа C</a></li>
                        <li class="divider"></li>
                        <li><a href="#" title="Авто/мотогонки, хоккей, зимние виды спорта (кроме горных лыж)">Авто/мотогонки...</a></li>
                        <li><a href="#" title="Горнолыжный и другие виды спорта">Горнолыжный и другие виды спорта</a></li>*@

                }
            </ul>
        </div>
        <div class="risk_bonus_content">

            @Html.Action("_bonus_list", "Contract", new { contractid = (Guid)ViewBag.contractid })

        </div>
    </div>
}
