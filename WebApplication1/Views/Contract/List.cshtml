@model IEnumerable<gTravel.Models.Contract>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Contract_Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Номер
        </th>
        <th>
            Серия
        </th>
        <th>
            Валюта
        </th>
        <th>
            Период
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.contractnumber
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seria.Code)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.name)
            </td>
            <td>
               @item.date_begin.Value.ToShortDateString() - @item.date_end.Value.ToShortDateString()
                (@item.date_diff)
            </td>
            <td>
                @Html.ActionLink("Edit", "Contract_edit", new { id = item.ContractId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ContractId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ContractId })
            </td>
        </tr>
    }

</table>
