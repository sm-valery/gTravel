@using PagedList.Mvc;
@using PagedList;

@model PagedList<gTravel.Models.v_importlog>

<div class="alert alert-success small">
    <strong>Обратите внимание!</strong>
    В файле импорта не нужно заполнять колонку "номер договора". Номер договора присваивается автоматически системой.
    Поле "Номер договора" необходимо заполнять только в том случае, если Вы хотите загрузить несколько договоров из одного файла импорта. Тогда, для первой строки в "номер договора" ставим
    например порядковый номер договора в файле, а в последующих строках этого договора оставляем поле незаполненным. Параметры договора описываются в строчке с заполненным номером договора.
    <p>@Html.ActionLink("Пример файла импорта","importexapmle")
        
    </p>
</div>

@{
    ViewBag.Title = "Импорт";
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" class="form-control" />
    <span class="help-block">Файл должен быть в формате Microsoft Excel 2007 и выше (*.xlsx)</span>
    <input class="btn btn-default" type="submit" value="OK" />
}


<hr />
@if (!string.IsNullOrEmpty((string)ViewBag.Message))
{
    <p></p>
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Закрыть</span></button>
        @Html.ValidationSummary()
        @ViewBag.Message
    </div>
}




