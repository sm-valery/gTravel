@model gTravel.Models.AgentSeria

@{
    ViewBag.Title = "Create";
    var agent = (gTravel.Models.Agent)ViewBag.Agent;
}

<h3>@agent.Name</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(m=>Model.AgentId)
    
    <div class="form-horizontal">



        <div class="form-group">
            @Html.Label("Серия", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SeriaId", null, htmlAttributes: new { @class = "form-control" })
               
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Пакет территорий", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TerritoryGrpId", null, htmlAttributes: new { @class = "form-control" })
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { agentid  = Model.AgentId})
</div>
